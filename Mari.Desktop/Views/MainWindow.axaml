<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Mari.Desktop.ViewModels"
        xmlns:components="clr-namespace:Mari.Desktop.Views.Components"
        mc:Ignorable="d" d:DesignWidth="1500" d:DesignHeight="800"
        Width="1500" Height="800"
        x:Class="Mari.Desktop.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Mari.Desktop"
        CanResize="False">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid ColumnDefinitions="Auto, *" RowDefinitions="*, Auto">
        <components:NavMenu Name="NavMenu" IsHidden="True" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" />
        <components:AppBar Name="AppBar" Classes="main-app_bar" Grid.Row="1" Grid.Column="1" />
    </Grid>
</Window>